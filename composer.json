{
    "name": "datlechin/flarum-who-replied",
    "description": "Show the users who replied to a post",
    "keywords": [
        "flarum",
        "flarum-extension"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.0.0"
    },
    "authors": [
        {
            "name": "Ngo Quoc Dat",
            "email": "datlechin@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://ngoquocdat.com",
    "autoload": {
        "psr-4": {
            "Datlechin\\WhoReplied\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Who Replied",
            "category": "feature",
            "icon": {
                "name": "fas fa-reply-all",
                "backgroundColor": "#D3241C",
                "color": "#fff"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    }
}
